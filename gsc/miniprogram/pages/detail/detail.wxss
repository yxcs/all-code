.tab {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.tab view {
  width: 33%;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: rgba(255,255,255,0.8);
  border-bottom: 1rpx solid #333;
}
.tab view.bd-lr {
  width: 34%;
  border-left: 1rpx solid #333;
  border-right: 1rpx solid #333;
}
.tab view.bd-r {
  border-right: 1rpx solid #333;
}
.tab view.active {
  background: rgba(255,255,255,0.8);
  color: #666666;
}

.gap {
  width: 100%;
  height: 20rpx;
}
.gap-lg {
  width: 100%;
  height: 40rpx;
}
.con-wrap {
  width: 670rpx;
  margin: 0 auto;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background: rgba(255,255,255, 0.2);
  color: #ffffff;
}
.con-wrap .poem-name {
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 10rpx;
}
.con-wrap .poem-author {
  text-align: center;
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.con-wrap .poem-author text {
  padding-right: 20rpx;
}
.con-wrap .con-line {
  text-align: center;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.con-wrap .item-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.con-wrap .item-line {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.con-wrap .res {
  font-size: 22rpx;
}
.con-wrap .res text {
  padding-right: 10rpx;
}
.author-title {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.lifetime {
  font-size: 28rpx;
  margin-top: 10rpx;
}
.author-more {
  width: 670rpx;
  margin: 0 auto;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
  background: rgba(255,255,255, 0.2);
  color: #ffffff;
  text-align: center;
  font-size: 24rpx;
}

/** 卡片 */
.card-wrap {
  width: 670rpx;
  height: calc( 100vh - 200rpx );
  padding: 40rpx 0;
  box-sizing: border-box;
  margin: 0 auto;
}
.card-wrap .card {
  width: 100%;
  height: 100%;
  background: #ffffff;
  box-sizing: border-box;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-content: stretch;
  border-radius: 6rpx;
}
.card-wrap .card .lt {
  width: 170rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.card-wrap .card .lt view {
  writing-mode: vertical-rl;
  letter-spacing: 10rpx;
  margin: 0 10rpx;
  font-size: 32rpx;
  color: #4a4a4a;
}
.card-wrap .card .rt {
  width: 500rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: row-reverse;
}
.card-wrap .card .rt view {
  writing-mode: vertical-rl;
  letter-spacing: 10rpx;
  margin: 0 10rpx;
  font-size: 36rpx;
  color: #4a4a4a;
}

.xin {
  position: fixed;
  right: 20rpx;
  bottom: 120rpx;
  z-index: 99;
  width: 40rpx;
  height: 40rpx;
}
.xin image {
  width: 100%;
  height: 100%;
}