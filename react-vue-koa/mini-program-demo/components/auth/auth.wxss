/* 引入app.wxss */
@import "../../app.wxss";

.pop-up-box .pop-up-mask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .7);
}
.pop-up-box .pop-up-content {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1001;
  background-color: #fff;
}

.pop-up-content {
  width: 604rpx;
  padding: 56rpx 30rpx 30rpx;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pop-up-content .title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 40rpx;
}
.pop-up-content .tips {
  color: #777;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}
.img {
  width: 418rpx;
  height: 366rpx;
  margin-bottom: 40rpx;
  position: relative;
  left: 20rpx;
}
.btn {
  width: 480rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 44rpx;
  color: #fff;
  font-size: 32rpx;
  background-color: #359647;
}

/* 透明按钮 */
.button-opacity-p {
  position: relative;
}
.button-opacity {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0;
}
/* end */