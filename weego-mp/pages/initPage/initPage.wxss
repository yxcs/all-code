.wrap {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: #f00;
    overflow: hidden;
}
.wrap image {
    width: 100%;
    height: 100%;
}
.wrap .auth-modal{
    width: 500rpx;
    height: 400rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -200rpx;
    margin-left: -250rpx;
    background: rgba(255, 255, 255, 0.5);
}