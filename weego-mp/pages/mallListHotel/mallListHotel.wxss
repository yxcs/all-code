/* pages/mallListHotel/mallListHotel.wxss */
@import "../../components/common.wxss";


.wrap {
  width: 750rpx;
  overflow: hidden;
}
.tag-tab {
  width: 750rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  height: 87rpx;
  background: #fff;
}
.tag-tab .item {
  width: 250rpx;
  height: 87rpx;
  text-align: center;
  line-height: 82rpx;
  font-size: 30rpx;
  color: #202020;
}
.tag-tab .item .item-text {
  display: inline-block;
}
.tag-tab .item .active {
  border-bottom: 5rpx solid #ff4f4e;
  color: #ff4f4e;
}
.pad {
  width: 750rpx;
  height: 67rpx;
}



.noMore {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  color: #9d9d9d;
  text-align: center;
  padding: 40rpx 0 60rpx 0;
}
/* loading 动画 */
.footer-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}
.footer-loading view {
  width: 9rpx;
  height: 9rpx;
  margin: 4px;
  background-image: url('https://img3.weegotr.com/xcx/statics/dot-light.png');
  background-repeat: no-repeat;
  background-size: cover;
  background-clip: padding-box;
  border-radius: 100%;
  -webkit-animation: sk-bouncedelay 1.2s infinite ease-in-out;
  animation: sk-bouncedelay 1.2s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.footer-loading .first {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.footer-loading .second {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    -webkit-transform: scale(0.01);
  }

  40% {
    -webkit-transform: scale(1);
  }
}

@keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    transform: scale(0.01);
    -webkit-transform: scale(0.01);
  }

  40% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}