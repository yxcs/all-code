/* pages/orderDetails/orderDetails.wxss */
.wrap {
  width: 750rpx;
}
.mar {
  margin-bottom: 100rpx;
}
.order-details-header {
  width: 750rpx;
  height: 657rpx;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}
.header-mask {
  width: 750rpx;
  height: 657rpx;
  background: rgba(0,0,0,0.5);
  overflow: hidden;
}
.header-mask .header-top-bg {
  width: 690rpx;
  height: 50rpx;
  background-position: top center;
  background-repeat: no-repeat;
  background-size: 100% 50rpx;
  margin: 80rpx auto 20rpx auto;
}
.header-mask .bg-hotel {
  background-image: url('https://img3.weegotr.com/xcx/statics/hotel-header.png');
}
.header-mask .bg-package {
  background-image: url('https://img3.weegotr.com/xcx/statics/package-header.png');
}
.header-title {
  width: 690rpx;
  font-size: 40rpx;
  color: #ffffff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
}
.header-title-en {
  font-size: 29rpx;
  margin: 10rpx 0;
  color: #cccccc;
  width: 690rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 0 auto;
}

.header-package-title {
  width: 690rpx;
  font-size: 40rpx;
  color: #cccccc;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 0 auto;
}
.title-separator {
  width: 50rpx;
  height: 0;
  border-bottom: 2px solid #acaaaa;
  margin: 20rpx auto;
}
.header-phone {
  width: 690rpx;
  font-size: 29rpx;
  margin: 10rpx auto;
  color: #ffffff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.header-address {
  width: 690rpx;
  font-size: 29rpx;
  margin: 10rpx auto;
  color: #ffffff;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #acaaaa;
}
.header-btn {
  padding-top: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-btn .btn {
  width: 250rpx;
  height: 60rpx;
  border: 1px solid #ffffff;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #ffffff;
  background: rgba(129, 129, 129, 0.3);
  line-height: 60rpx;
  text-align: center;
}

/* 订单详情 */
.order-details-bx {
  width: 690rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
  border-bottom: 1px solid rgba(32, 32, 32, 0.35);
  margin: 0 30rpx 60rpx 30rpx;
}
.details-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.details-header .img {
  width: 35rpx;
  height: 40rpx;
  background: url('https://img3.weegotr.com/xcx/statics/order-icon.png') no-repeat;
  background-size: 35rpx 40rpx;
}
.details-header .text {
  margin-left: 10rpx;
  font-size: 36rpx;
  color: #202020;
}
.details-list {}
.details-list .item {
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
  color: #202020;
}
.details-list .label {
  width: 180rpx;
  display: flex;
  justify-content: space-between;
}
.details-list .value {
  width: 480rpx;
  text-align: right;
}
.details-list .item .des {
  color: #9d9d9d;
}
.details-list .item .des-green {
  color: #34D09B;
  font-size: 28rpx;
}
.details-list .item .label text {
  font-weight: 600;
  display: inline-block;
}
.details-list .item .real-price {
  color: #ff4f4e;
  font-weight: 600;
  font-size: 36rpx;
}

/* 入住人信息 */
.user-info-bx {
  width: 690rpx;
  box-sizing: border-box;
  padding: 30rpx 0;
  border-bottom: 1px solid rgba(32, 32, 32, 0.35);
  margin: 0 30rpx 60rpx 30rpx;
}
.info-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.info-header .img {
  width: 48rpx;
  height: 48rpx;
  background: url('https://img3.weegotr.com/xcx/statics/order-contact.png') no-repeat;
  background-size: 48rpx 48rpx;
}
.info-header .text {
  margin-left: 10rpx;
  font-size: 36rpx;
  color: #202020;
}
.info-list {}
.info-title {
  margin: 35rpx 0;
  font-size: 30rpx;
  font-weight: 600;
  color: #202020;
}
.info-list .item {
  margin: 25rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
  color: #202020;
}
.info-list .label {
  width: 180rpx;
  display: flex;
  justify-content: space-between;
}
.info-list .value {
  width: 480rpx;
  text-align: right;
}
.info-list .value text .gray {
  color: #9d9d9d;
}
.info-list .item .des {
  color: #9d9d9d;
}
.info-list .item .des-green {
  color: #34D09B;
  font-size: 28rpx;
}
.info-list .item .label text {
  font-weight: 600;
  display: inline-block;
}
.info-list .item .real-price {
  color: #ff4f4e;
  font-weight: 600;
  font-size: 36rpx;
}
.info-des {
  margin: 25rpx 0;
  font-size: 30rpx;
  color: #202020;
}

/* 更改条款 */
.order-tips-bx {
  width: 690rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
  margin: 0 30rpx 60rpx 30rpx;
}
.tips-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.tips-header .img {
  width: 48rpx;
  height: 48rpx;
  background: url('https://img3.weegotr.com/xcx/statics/order-tips.png') no-repeat;
  background-size: 48rpx 48rpx;
}
.tips-header .text {
  margin-left: 10rpx;
  font-size: 36rpx;
  color: #202020;
}
.tips-list {
  margin-top: 35rpx;
}
.tips-list .item {
  margin-bottom: 25rpx;
}
.tips-list .item .tip-title {
  font-weight: 500;
  font-size: 30rpx;
  text-indent: -15rpx;
  color: #202020;
  margin-bottom: 30rpx;
}
.tips-list .item .tip-des {
  font-size: 30rpx;
  color: #202020;
  line-height: 45rpx;
}
.tips-more {
  padding-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ff4f4e;
}
.tips-more navigator {
  width: 150rpx;
  border-bottom: 1px solid #ff4f4e;
  padding-bottom: 6rpx;
  margin: 0 auto;
}

.order-btn {
  display: flex;
  justify-content: center;
  align-items: center;
}
.order-btn .btn-cancel {
  width: 260rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #818181;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #818181;
  text-align: center;
  margin: 0 20rpx;
}
.order-btn .btn-concat {
  width: 260rpx;
  height: 70rpx;
  line-height: 70rpx;
  border: 1px solid #ff4f4e;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #202020;
  text-align: center;
  margin: 0 20rpx;
}
.pad {
  width: 100%;
  height: 60rpx;
}
.pad-x {
  width: 100%;
  height: 160rpx;
}

/* 查看行程 */
.btn-wrap {
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-wrap .btn-travel {
  width: 250rpx;
  height: 60rpx;
  border: 1px solid #202020;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #202020;
  line-height: 60rpx;
  text-align: center;
}

.order-btn-pay {
  height: 90rpx;
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  background-color: #ff4f4e;
  cursor: pointer;
}
.tag-status {
  width: 100rpx;
  height: 46rpx;
  display: inline-block;
  padding: 0 15rpx;
  font-size: 30rpx;
  text-align: center;
  color: #ffffff;
  line-height: 46rpx;
  border-radius: 10rpx;
}
/* 状态颜色 */
.status-cancelled,
.status-expired {
  background-color: #818181;
}

.status-unpaid,
.status-paying,
.status-refund_pending {
  background-color: #F6A623;
}

.status-paid,
.status-confirmed {
  background-color: #FF4F4E;
}

.status-refund_confirmed {
  background-color: #34D09B;
}
