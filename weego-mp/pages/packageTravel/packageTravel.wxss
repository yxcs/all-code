/* pages/packageTravel/packageTravel.wxss */
.wrap {
  width: 750rpx;
  box-sizing: border-box;
  padding: 30rpx 25rpx;
  margin-bottom: 60rpx;
}
.pt-hotel {
  border-bottom: 1px solid rgba(32,32,32,.35);
  padding-bottom: 60rpx;
}
.pt-hotel .title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.pt-hotel .title image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 12rpx;
}
.pt-hotel .title text {
  font-size: 36rpx;
  font-weight: 500;
  color: #202020;
}
.pt-hotel .hotel {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 30rpx;
}
.pt-hotel .hotel .img {
  width: 200rpx;
  height: 200rpx;
  padding-right: 20rpx;
}
.pt-hotel .hotel .img image {
  width: 200rpx;
  height: 200rpx;
}
.hotel-title {
  color: #202020;
  font-weight: 500;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.hotel-en-title {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.hotel-des {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 行程列表 */
.pt-travel {
  margin: 20rpx 0;
}
.item {
  padding: 30rpx 0;
}
.pt-travel .title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 30rpx;
}
.pt-travel .title view{
  width: 8rpx;
  height: 32rpx;
  background-color: #ff4f4e;
  margin-right: 12rpx;
}
.pt-travel .title text{
  font-size: 30rpx;
  font-weight: 500;
  color: #202020;
}
.pt-travel .sm-title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #202020;
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.pt-travel .sm-title view {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}
.pt-travel .sm-title view image{
  width: 40rpx;
  height: 40rpx;
}
.pt-travel .des {
  font-size: 30rpx;
  color: #ff4f4e;
  line-height: 46rpx;
}
.pt-travel .des text {
  color: #202020;
}
.pt-travel .img {
  width: 700rpx;
  padding: 20rpx 0;
}
.pt-travel .img image {
  width: 700rpx;
}
.pt-travel .img-des {
  color: #202020;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}


/* footer */
.footer-img {
  display: flex;
  justify-content: center;
}
.footer-img image {
  width: 326rpx;
  height: 52rpx;
}