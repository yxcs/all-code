/* pages/packageDetail.wxss */
.wrap {
  width: 750rpx;
  overflow: hidden;
}
.wrap-swiper swiper {
  width: 750rpx;
  height: 464rpx;
}
.wrap-swiper swiper .slide-image {
  width: 750rpx;
  height: 464rpx;
}
.tag {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 156rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 56rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: rgba(255, 79, 78, 90);
  padding: 0;
}
.wrap-swiper .triangle-top {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 0rpx;
  left: 611rpx;
  z-index: 100;
  background-image: url('https://img3.weegotr.com/xcx/statics/triangle-top.png');
  background-repeat: no-repeat;
}
.wrap-swiper .triangle-top view {
  width: 130rpx;
  text-align: right;
}
.wrap-swiper .triangle-top .tt1 {
  padding-top: 10rpx;
  font-size: 34rpx;
  color: #fff;
}
.wrap-swiper .triangle-top .tt2 {
  font-size: 20rpx;
  color: #fff;
}
.booking {
  height: 90rpx;
  width: 750rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  background-color: #ff4f4e;
  cursor: pointer;
}


/* modal 样式 */
.date-select-modal {
  width: 750rpx;
  height: 100%;
  position: fixed;
  z-index: 999;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
}
.date-select-header {
  width: 750rpx;
  height: 90rpx;
  background: #202020;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
  font-size: 34rpx;
}
.date-select-header .title {

}
.date-select-header .close {
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 0;
  right: 0;
  background-image: url('https://img3.weegotr.com/xcx/statics/close-btn-fff.png');
  background-size: 32rpx 32rpx;
  background-repeat: no-repeat;
  background-position: 50%;
}
.date-select-modal .week-list {
  width: 742rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #9e9e9e;
  text-align: center;
  font-size: 28rpx;
  color: #202020;
  background: #fff;
  padding: 0 4rpx;
}
.date-select-modal .week-list view {
  width: 106rpx;
}
.date-select-modal .week-list .weekend {
  color: #ff4f4e;
}
.date-select-wrap {
  position: absolute;
  top: 152rpx;
  left: 0;
  right: 0;
  bottom: 0rpx;
  background: #fff;
  overflow-y: auto;
}
.date-select-con {
  width: 750rpx;
  height: auto;
  overflow: hidden;
  padding-bottom: 120rpx;
}
.list {
  width: 750rpx;
  overflow: hidden;
}
.list-title {
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  color: #202020;
  font-weight: 400;
  border-bottom: 1px solid rgba(32,32,32,.35);
}
.list-item {
  box-sizing: border-box;
  padding: 0 4rpx;
  height: 106rpx;
  border-bottom: 1px solid #9e9e9e;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.list-item .day {
  width: 106rpx;
  height: 106rpx;
  text-align: center;
  font-size: 30rpx;
  color: #202020;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.list-item .day .money {
  font-size: 20rpx;
}
.list-item .day .week {
  color: #ff4f4e;
}
.list-item .day .unavailable {
  color: #9e9e9e;
  text-decoration: line-through;
}
.list-item .active {
  background: #ff4f4e;
  color: #fff;
}
.list-item .day .disabled {
  opacity: .3;
  text-decoration: line-through;
}
.bottom-btn {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  z-index: inherit;
  font-size: 36rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
}
.selecte {
  background: #4a4a4a;
}
.confirm {
  background: #ff4f4e;
}