.wrap {
  width: 750rpx;
}
.active-logo {
  width: 750rpx;
  height: 560rpx;
  overflow: hidden;
}
.active-logo image {
  width: 750rpx;
  height: 560rpx;
}
.time-leave {
  width: 750rpx;
  height: 108rpx;
  line-height: 108rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.time-leave .time-clock {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 10rpx;
}
.time-leave .time-clock image {
  width: 48rpx;
  height: 48rpx;
}
.time-leave .time-text {
  font-size: 28rpx;
  color: #202020;
}
.time-leave .time-num {
  width: 54rpx;
  height: 54rpx;
  line-height: 54rpx;
  color: #ff4f4e;
  font-weight: 500;
  background: rgba(129,129,129,0.1);
  text-align: center;
  font-size: 34rpx;
  margin: 0 10rpx;
}

/* 二级活动列表 */
.sub-active-list {
  padding: 60rpx 0;
}
.sub-active-theme {
  height: 200rpx;
  background: url('https://img3.weegotr.com/xcx/statics/room-mask.png') no-repeat 50%;
  background-size: 420rpx 200rpx;
  text-align: center;
}
.sub-active-theme .main-title {
  font-size: 54rpx;
  color: #202020;
  padding-top: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sub-active-theme .main-des {
  font-size: 28rpx;
  color: #202020;
  padding-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.sub-active-package {
  height: 200rpx;
  background: url('https://img3.weegotr.com/xcx/statics/room-mask.png') no-repeat 50%;
  background-size: 420rpx 200rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sub-active-package .main-title {
  width: 600rpx;
  padding-top: 20rpx;
  color: #202020;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 54rpx;
  color: #202020;
}
.item-img {
  width: 750rpx;
  height: 424rpx;
  padding: 30rpx 0;
}
.item-img image {
  width: 750rpx;
  height: 424rpx;
}
.desc {
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #202020;
  overflow: hidden;
  -webkit-box-flex: 1;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.desc .start,
.desc .end {
  color: #ff4f4e;
}

.mar20 {
  margin-top: 20rpx;
}
.item-detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
}
.item-detail .item-btn {
  padding: 10rpx 20rpx;
  border: 1px solid #ff4f4e;
  border-radius: 5rpx;
  text-align: center;
  font-size: 28rpx;
}
.item-price {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.item-price .old {
  position: relative;
  font-size: 28rpx;
  color: rgba(32,32,32,0.5);
  margin-right: 20rpx;
  padding: 0 6rpx;
}
.item-price .old view {
  position: absolute;
  top: 16rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #ff4f4e;
}
.item-price .new {
  font-size: 28rpx;
  color: #202020;
}
.item-price .new text {
  font-size: 40rpx;
  font-weight: 500;
  color: #ff4f4e;
}



.footer-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}
.footer-loading view {
  width: 9rpx;
  height: 9rpx;
  margin: 4px;
  background-image: url('https://img3.weegotr.com/xcx/statics/dot-light.png');
  background-repeat: no-repeat;
  background-size: cover;
  background-clip: padding-box;
  border-radius: 100%;
  -webkit-animation: sk-bouncedelay 1.2s infinite ease-in-out;
  animation: sk-bouncedelay 1.2s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.footer-loading .first {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.footer-loading .second {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    -webkit-transform: scale(0.01);
  }

  40% {
    -webkit-transform: scale(1);
  }
}

@keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    transform: scale(0.01);
    -webkit-transform: scale(0.01);
  }

  40% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}