    background: rgba(129,129,129,0.1);
    text-align: center;
    font-size: 34rpx;
    margin: 0 10rpx;
}

.active-list {
    padding: 35rpx 30rpx;
}
.active-list .list-title {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}
.active-list .list-title .img {
    width: 36rpx;
    height: 37rpx;
    line-height: 37rpx;
    margin-right: 20rpx;
}
.active-list .list-title .img image {
    width: 36rpx;
    height: 37rpx;
}
.active-list .list-title .title {
    font-size: 32rpx;
    color: #202020;
}

.active-item {
    padding: 20rpx 0;
}
.active-item .cover-img {
    width: 690rpx;
    height: 441.6rpx;
    margin-bottom: 27rpx;
    position: relative;
}
.active-item .cover-img .tag {
    width: 169rpx;
    height: 83rpx;
    position: absolute;
    top: 40rpx;
    right: 20rpx;
}
.active-item .cover-img .tag image{
    width: 169rpx;
    height: 83rpx;
}
.active-item .cover-img image {
    width: 690rpx;
    height: 441.6rpx;
}
.active-item .package-title {
    font-size: 40rpx;
    font-weight: 500;
    color: #202020;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.active-item .hotel-title {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #202020;
    font-size: 40rpx;
    font-weight: 500;
}
.active-item .hotel-title-en {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    color: #202020;
    font-size: 30rpx;
}
.active-item .desc {
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #202020;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.item-detail {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
}
.item-detail .item-btn {
    padding: 10rpx 20rpx;
    border: 1px solid #ff4f4e;
    border-radius: 5rpx;
    text-align: center;
    font-size: 28rpx;
}
.item-price {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}
.item-price .old {
    position: relative;
    font-size: 28rpx;
    color: rgba(32,32,32,0.5);
    margin-right: 20rpx;
    padding: 0 6rpx;
}
.item-price .old view {
    position: absolute;
    top: 16rpx;
    left: 0;
    right: 0;
    height: 4rpx;
    background: #ff4f4e;
}
.item-price .new {
    font-size: 28rpx;
    color: #202020;
}
.item-price .new text {
    font-size: 40rpx;
    font-weight: 500;
    color: #ff4f4e;
}
