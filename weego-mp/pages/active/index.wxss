}
.time-leave {
    width: 750rpx;
    height: 108rpx;
    line-height: 108rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,0.2);
}
.time-leave .time-clock {
    width: 48rpx;
