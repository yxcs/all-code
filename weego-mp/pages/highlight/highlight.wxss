/* pages/highlight/highlight.wxss */
.wrap {
  width: 750rpx;
  padding: 30rpx 25rpx 60rpx 25rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.hl-list {
  margin-bottom: 60rpx;
}
.hl-list .item {
  margin-bottom: 40rpx;
}
.hl-list .item .title {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 30rpx;
}
.hl-list .item .title view{
  width: 8rpx;
  height: 32rpx;
  background-color: #ff4f4e;
  margin-right: 12rpx;
}
.hl-list .item .title text {
  font-size: 30rpx;
  font-weight: 500;
  color: #202020;
}
.hl-list .item .desc {
  color: #202020;
  font-size: 30rpx;
  line-height: 52rpx;
  margin-bottom: 30rpx;
}
.hl-list .item .img {
  display: flex;
  justify-content: center;
  width: 700rpx;
}
.hl-list .item .img image {
  width: 700rpx;
}

/* footer */
.footer-img {
  display: flex;
  justify-content: center;
}
.footer-img image {
  width: 326rpx;
  height: 52rpx;
}