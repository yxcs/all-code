/* pages/chosen/index.wxss */
.wrap {
  width: 750rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.footer-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}
.footer-loading view {
  width: 9rpx;
  height: 9rpx;
  margin: 4px;
  background-image: url('https://img3.weegotr.com/xcx/statics/dot-light.png');
  background-repeat: no-repeat;
  background-size: cover;
  background-clip: padding-box;
  border-radius: 100%;
  -webkit-animation: sk-bouncedelay 1.2s infinite ease-in-out;
  animation: sk-bouncedelay 1.2s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.footer-loading .first {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.footer-loading .second {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    -webkit-transform: scale(0.01);
  }

  40% {
    -webkit-transform: scale(1);
  }
}

@keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    transform: scale(0.01);
    -webkit-transform: scale(0.01);
  }

  40% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}