/* pages/search/search.wxss */
.wrap {
  width: 750rpx;
  box-sizing: border-box;
  padding: 20rpx 25rpx;
  overflow: hidden;
}
.search-wrap {
  position: fixed;
  z-index: 9;
  top: 0;
  background: #fff;
  width: 700rpx;
  padding: 20rpx 0;
}
.search {
  width: 700rpx;
  height: 80rpx;
}
.search .input-under {
  position: absolute;
  top: 20rpx;
  left: 0;
  z-index: -1;
  width: 700rpx;
  box-sizing: border-box;
  height: 80rpx;
  padding: 0 60rpx 0 100rpx;
  background: #f5f5f5;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #818181;
  font-weight: 200px;
}
.input-up {
  width: 700rpx;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: transparent;
  line-height: 80rpx;
  overflow: hidden;
}
.search .input-up .icon {
  width: 100rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .input-up .icon icon {
  padding-top: 36rpx;
}
.search .input-up input {
  width: 520rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #202020;
  line-height: 80rpx;
}
.search .input-up .clear {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.search .input-up .clear icon {
  padding-top: 30rpx;
}

/* search-list */
.list {
  padding: 100rpx 20rpx 30rpx 20rpx;
  overflow: hidden;
}
.list .title {
  color: #818181;
  font-size: 28rpx;
  text-align: center;
  margin-top: 40rpx;
  font-weight: 400;
}
.list .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 40rpx 0;
}
.list .item .img {
  width: 40rpx;
  height: 44rpx;
  padding-right: 40rpx;
}
.list .item .img image {
  width: 40rpx;
  height: 44rpx;
}
.list .item .zh {
  font-size: 30rpx;
  color: #202020;
}
.list .item .zh text {
  color: #ff4f4e;
  font-weight: 400;
}
.list .item .en {
  font-size: 28rpx;
  color: #202020;
}
.list .item .en text {
  color: #ff4f4e;
  font-weight: 400;
}

/* loading 动画 */
.footer-loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 40rpx;
}
.footer-loading view {
  width: 9rpx;
  height: 9rpx;
  margin: 4px;
  background-image: url('https://img3.weegotr.com/xcx/statics/dot-light.png');
  background-repeat: no-repeat;
  background-size: cover;
  background-clip: padding-box;
  border-radius: 100%;
  -webkit-animation: sk-bouncedelay 1.2s infinite ease-in-out;
  animation: sk-bouncedelay 1.2s infinite ease-in-out;
  -webkit-animation-fill-mode: both;
  animation-fill-mode: both;
}
.footer-loading .first {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.footer-loading .second {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    -webkit-transform: scale(0.01);
  }

  40% {
    -webkit-transform: scale(1);
  }
}

@keyframes sk-bouncedelay {
  0%,
  80%,
  100% {
    transform: scale(0.01);
    -webkit-transform: scale(0.01);
  }

  40% {
    transform: scale(1);
    -webkit-transform: scale(1);
  }
}