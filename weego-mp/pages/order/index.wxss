  color: #fff;
}

.wee--order-wrap .login-btn {
  font-size: 30rpx;
  color: #fff;
  width: 193rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #ff4f4e;
  text-align: center;
  border-radius: 28rpx;
}
.wee--order-wrap .bind-phone-btn {
  font-size: 30rpx;
  color: #fff;
  width: 193rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #ff4f4e;
  text-align: center;
  border-radius: 28rpx;
  margin-top: 20rpx;
}
.wee--order-wrap .bind-phone-btn button {
  font-size: 30rpx;
  color: #fff;
  width: 193rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: #ff4f4e;
  text-align: center;
