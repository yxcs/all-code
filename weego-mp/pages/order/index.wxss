  height: 91rpx;
}
.login-modal .modal-logo .slogan {
  text-align: center;
  font-size: 32rpx;
  color: #202020;
}
.modal-phone {
  height: 140rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.modal-phone .phone-des {
  font-size: 28rpx;
  color: #6e6e6e;
  padding-top: 30rpx;
}
.modal-phone .phone-number {
  font-size: 28rpx;
  color: #181818;
  padding-top: 10rpx;
}
.modal-footer {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  color: #202020;
}
.modal-footer .cancel-btn {
