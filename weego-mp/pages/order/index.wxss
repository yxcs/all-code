}

.status-paid,
.status-confirmed {
  background-color: #FF4F4E;
}

.status-refund_confirmed {
  background-color: #34D09B;
}

/* 登录弹窗 */
.login-modal-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.4);
}
.login-modal-mask .login-modal {
  width: 660rpx;
  height: 560rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -330rpx;
  margin-top: -280rpx;
  border-radius: 10rpx;
  border: 1px solid #ccc;
}
.login-modal-mask .login-modal .modal-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #202020;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.login-modal-mask .login-modal .modal-logo {
  height: 210rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid rgba(0,0,0,0.2);
}
.login-modal .modal-logo .logo {
  width: 91rpx;
