/* pages/play/play.wxss */
.wrap {
    overflow: hidden;
}
.video-wrap{
    width: 750rpx;
    height: 424rpx;
}
.video-wrap video{
    width: 750rpx;
    height: 424rpx;
}

.title-wrap{
    display: flex;
    align-items: center;
    box-sizing: border-box;
    width: 750rpx;
    height: 150rpx;
    font-size: 26rpx;
    padding: 15rpx 20rpx;
    border-bottom: 1px solid #eee;
}
.title-text {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    width: 430rpx;
    height: 150rpx;
    line-height: 40rpx;
    padding-right: 20rpx;
}
.title-text view:nth-child(2) {
    padding-top: 10rpx;
    font-size: 24rpx;
    color: #999;
}
.title-num{
    width: 260rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
}
.play-num {
    line-height: 100%;
}
.play-num::before{
    content: " ";
    width: 0;
    height: 0;
    border-top: 10rpx solid transparent;
    border-bottom: 10rpx solid transparent;
    border-left: 14rpx #F0DA66 solid;
    display: inline-block;
    font-size: 0;
    border-radius: 5rpx;
}
.video-share {
    position: relative;
    padding-left: 15rpx;
}
.video-share-model{
    position: absolute;
    z-index: 99;
    top: 0;
    right: 50rpx;
    width: 300rpx;
    padding: 10rpx 20rpx;
    background: rgba(0,0,0,1);
    color: #fff;
    font-size: 22rpx;
}
.share-dot {
    display: inline-block;
    transform: rotate(-90deg);
}
.video-share image{
    width: 40rpx;
    height: 40rpx;
}

.recommend-wrap{
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 20rpx;
    /*overflow: hidden;*/
}
.recommend-title{
    padding: 30rpx 0 15rpx 0;
    font-size: 26rpx;
    color: #222;
}
.recommend-list{
    width: 710rpx;
    font-size: 26rpx;
}

.item {
    height: 130rpx;
    padding: 10rpx 0rpx;
    display: flex;
}
.item-img {
    width: 200rpx;
}
.item-img image {
    width: 200rpx;
    height: 130rpx;
    border-radius: 10rpx;
}
.item-text{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 490rpx;
    height: 110rpx;
    padding: 10rpx 0 10rpx 20rpx;
}

.item-text-num {
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;
    color: #999;
}
.item-num::before{
    content: " ";
    width: 0;
    height: 0;
    border-top: 10rpx solid transparent;
    border-bottom: 10rpx solid transparent;
    border-left: 14rpx #F0DA66 solid;
    display: inline-block;
    font-size: 0;
    border-radius: 5rpx;
}